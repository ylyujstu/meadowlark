<h2>Sign up for our newsletter to receive news and specials</h2>
<div class="formContainer">
<form class="newsletterFrom" action="/process?form=newsletter" role="form" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <div class="">
        <label for="fieldName" class="">Name</label>
        <div class="">
            <input type="text" id="" class="" name="name"> 
        </div>
    </div>
    <div class="">
        <label for="fieldEmail" class="">Email</label>
        <div class="">
            <input type="email" id="" class="" name="email"> 
        </div>
    </div>
    <div class="">
        <div class="">
            <button type="submit" class="">Register</button>
        </div>
    </div>
</form>
</div>


{{#section 'jquery'}}
    <script>
        $(document).ready(function(){
            $('.newsletterForm').on('submit', function(evt){
                evt.preventDefault();
                var action = $(this).attr('action');
                var $container = $(this).closest('.formContainer');
                $.ajax({
                    url: action,
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(data){
                        if(data.success){
                            $container.html('<h2>Thank you!</h2>');
                        } else {
                            $container.html('There was a problem.');
                        }
                    },
                    error: function(){
                        $container.html('There was a problem.');
                    }
                });
            });
        });
    </script>
{{/section}}
